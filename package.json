{
  "name": "souvenir-et-solitude",
  "version": "1.0.0",
  "description": "Un projet de Floriane Turmeau",
  "author": "Florent Bourgeois",
  "scripts": {
    "scss": "node-sass --output-style compressed -o dist src",
    "autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "lint": "eslint src",
    "uglify": "uglifyjs src/*.js -m -c -o dist/scripts.js",
    "imagemin": "imagemin src/images/* -o dist/images -p mozjpeg",
    "serve": "browser-sync start --server --files 'dist/*.css, dist/*.js, **/*.html, !node_modules/**/*.html'",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "npm run lint && npm run uglify",
    "build:images": "npm run imagemin",
    "build:all": "npm run build:css && npm run build:js && npm run build:images",
    "watch:css": "onchange 'src/*.scss' -- npm run build:css",
    "watch:js": "onchange 'src/*.js' -- npm run build:js",
    "watch:images": "onchange 'src/images/**/*' -- npm run build:images",
    "watch:all": "npm-run-all -p serve watch:css watch:js watch:images",
    "postinstall": "npm run build:all && npm run watch:all",
    "cleanup-pages": "rimraf README.md src package.json .eslintrc node_modules",
    "deploy": "gh-pages-deploy"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/florentb/souvenirs-et-solitude.git"
  },
  "bugs": {
    "url": "https://github.com/florentb/souvenirs-et-solitude/issues"
  },
  "homepage": "https://github.com/florentb/souvenirs-et-solitude",
  "gh-pages-deploy": {
    "staticpath": ".",
    "prep": [
      "build:all"
    ],
    "post": [
      "cleanup-pages"
    ],
    "noprompt": false
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "browser-sync": "^2.13.0",
    "eslint": "^2.11.1",
    "gh-pages-deploy": "^0.4.2",
    "imagemin-cli": "^3.0.0",
    "imagemin-mozjpeg": "^6.0.0",
    "node-sass": "^3.7.0",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.5.0",
    "postcss-cli": "^2.5.2",
    "uglify-js": "^2.6.2"
  }
}
